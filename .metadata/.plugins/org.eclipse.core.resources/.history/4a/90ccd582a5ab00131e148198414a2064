currentWin = Ti.UI.currentWindow;
var Cloud = require('ti.cloud');

var holder = Ti.UI.createScrollView({	
	backgroundColor: "#FFF",
    contentWidth: 'auto',
    contentHeight: 'auto',
    top: 30,
    bottom: 0,
    showVerticalScrollIndicator: true,
    showHorizontalScrollIndicator: true
});


var username = Titanium.UI.createLabel({
    color:'#001245',
    text:'username',
    top:485,
    width:200,
    height:'auto'
});
 
var usernameField = Titanium.UI.createTextField({
    hintText:"Username",
    height:35,
    top: 300,
    width:250,
    blur:true,
    borderStyle:Titanium.UI.INPUT_BORDERSTYLE_ROUNDED
});
 
var password = Titanium.UI.createLabel({
    color:'#001245',
    text:'Password',
    top:550,
    width:200,
    height:'auto'
});
 
var passwordField = Titanium.UI.createTextField({
    hintText:"**********",
    height:35,
    top:350,
    width:250,
    blur:true,
    borderStyle:Titanium.UI.INPUT_BORDERSTYLE_ROUNDED
});

currentWin.add(usernameField, passwordField);
