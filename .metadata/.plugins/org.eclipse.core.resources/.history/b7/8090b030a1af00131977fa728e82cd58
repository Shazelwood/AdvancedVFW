var currentWin = Ti.UI.currentWindow;

var panel = Ti.UI.createView({
	backgroundColor: "#000",
	left: 0,
	width: 80,
	top: 30,
	bottom: 0,
	layout: "vertical"
});

for(var i = 0; i < 4; i++){
	var icons =Ti.UI.createView({
		top: 20,
		height: 50,
		width: 50,
		borderRadius: 20,
		backgroundColor:"#FFF"
	});
	var iconLabel = Ti.UI.createLabel({
		top: 5,
		text: i,
		font:{
			fontSize: 15,
			fontFamily: "Helvetica Neue"
		}
	});
	panel.add(icons);
};



currentWin.add(panel);