    borderStyle:Titanium.UI.INPUT_BORDERSTYLE_ROUNDED
});

var passwordField = Titanium.UI.createTextField({
    hintText:"Password",
    height:35,
    top:300,
    width:250,
    blur:true,
    borderStyle:Titanium.UI.INPUT_BORDERSTYLE_ROUNDED
});

var signInText = Ti.UI.createLabel({
	
});

var signIn = Ti.UI.createView({
	height: 35,
